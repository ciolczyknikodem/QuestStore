<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/html">
<head>
    <meta charset="UTF-8">
    <title>Queststore</title>
    <link href="/static/css/style.css" type="text/css" rel="stylesheet">
    <link href="/static/css/manager.css" type="text/css" rel="stylesheet">
    <link href="/static/css/forms.css" type="text/css" rel="stylesheet">
    <link href="/static/css/table.css" type="text/css" rel="stylesheet">
    <script src="/static/js/sidenav.js" type="text/javascript"></script>
</head>
<body>

<div id="mySidenav" class="sidenav">
    <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
    <ul>
        <li class="nav-element">
            <form method="post">
                <input type="submit" name="redirect-students" value="Students">
            </form>
        </li>
        <li class="nav-element">
            <form method="post">
                <input type="submit" name="redirect-promote-user" value="Promote user">
            </form>
        </li>
        <li class="nav-element">
            <form method="post">
                <input type="submit" name="redirect-tasks" value="Tasks">
            </form>
        </li>
        <li class="nav-element">
            <form method="post">
                <input type="submit" name="redirect-add-task" value="Add task">
            </form>
        </li>
        <li class="nav-element">
            <form method="post">
                <input type="submit" name="redirect-items" value="Items">
            </form>
        </li>
        <li class="nav-element">
            <form method="post">
                <input type="submit" name="redirect-add-item" value="Add item">
            </form>
        </li>
        <li class="nav-element">
            <form method="post">
                <input type="submit" name="redirect-add-student-to-group" value="Add student to group">
            </form>
        </li>
        <li class="nav-element">
            <form method="post">
                <input type="submit" name="logout" value="Logout">
            </form>
        </li>
    </ul>
</div>

<div id="main">

    <header>
        <div id="title-bar">
            <div id="menu" onclick="openNav()">
                <div class="menu-icon"></div>
                <div class="menu-icon"></div>
                <div class="menu-icon"></div>
            </div>
            <h1 id="title-text">Queststore</h1>
        </div>
    </header>

    <div class="container">

        <section>
            <h1>Available items</h1>
            <div class="tbl-header">
                <table cellpadding="0" cellspacing="0" border="0">
                    <thead>
                    <tr>
                        <th width="20%">Name</th>
                        <th width="50%">Description</th>
                        <th width="10%">Price</th>
                        <th width="10%">Category</th>
                        <th width="10%">Option</th>
                    </tr>
                    </thead>
                </table>
            </div>
            <div class="tbl-content">
                <table cellpadding="0" cellspacing="0" border="0">
                    <tbody>
                    {% for item in items %}
                        <tr>
                            <td width="20%">{{ item.getName() }}</td>
                            <td width="50%">{{ item.getDescription() }}</td>
                            <td width="10%">{{ item.getPrice() }}</td>
                            <td width="10%">{{ item.getCategory() }}</td>
                            <td width="10%">
                                <div class="options">
                                    <form method="post" id="delete-form">
                                        <label>
                                            <input type="submit" name="{{ item.getId() }}" value="Delete">
                                            <input type="hidden" name="delete-item-action" value="">
                                        </label>
                                    </form>
                                    <form method="post">
                                        <label>
                                            <input type="submit" name="{{ item.getId() }}" value="Edit">
                                            <input type="hidden" name="edit-item-action" value="">
                                        </label>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </section>

    </div>

    <footer>
        <div id="bottom-bar">
            <p id="copyright">2018 Design and Implementation : Lukasz Pelczar, Nikodem Ciolczyk</p>
        </div>
    </footer>

</div>

</body>
</html>